local Fluent = loadstring(game:HttpGet("https://github.com/dawid-scripts/Fluent/releases/latest/download/main.lua"))()

local Window = Fluent:CreateWindow({
    Title = "IRON HUB",
    SubTitle = "Fluent UI Loader",
    TabWidth = 160,
    Size = UDim2.fromOffset(500, 350),
    Acrylic = true,
    Theme = "Dark",
    MinimizeKey = Enum.KeyCode.RightShift  
})


local MainTab = Window:AddTab({ Title = "Aimbot", Icon = "home" })


local FOVEnabled = false
local FOVRadius = 120
local Smoothness = 0.1


MainTab:AddToggle("AimLock", {
    Title = "Enable AimLock",
    Default = false,
    Callback = function(Value)
        FOVEnabled = Value
    end
})


MainTab:AddSlider("FOVSlider", {
    Title = "FOV Size",
    Description = "Adjust the Field of View",
    Default = 120,
    Min = 50,
    Max = 500,
    Rounding = 0,
    Callback = function(Value)
        FOVRadius = Value
    end
})


MainTab:AddSlider("SmoothSlider", {
    Title = "Smoothness",
    Description = "Adjust aiming smoothness",
    Default = 0.1,
    Min = 0.01,
    Max = 1,
    Rounding = 2,
    Callback = function(Value)
        Smoothness = Value
    end
})


MainTab:AddButton({
    Title = "Close UI",
    Description = "Close IRON HUB Menu",
    Callback = function()
        Window:Destroy()
    end
})


local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local Camera = workspace.CurrentCamera
local LocalPlayer = Players.LocalPlayer

 inside FOV
local function GetClosestEnemy()
    local closestDist = FOVRadius
    local target = nil
    for _, player in pairs(Players:GetPlayers()) do
        if player ~= LocalPlayer and player.Character and player.Character:FindFirstChild("Head") then
            if player.Team ~= LocalPlayer.Team then
                local screenPos, onScreen = Camera:WorldToViewportPoint(player.Character.Head.Position)
                if onScreen then
                    local dist = (Vector2.new(screenPos.X, screenPos.Y) - Vector2.new(Camera.ViewportSize.X/2, Camera.ViewportSize.Y/2)).Magnitude
                    if dist < closestDist then
                        closestDist = dist
                        target = player.Character.Head
                    end
                end
            end
        end
    end
    return target
end


RunService.RenderStepped:Connect(function()
    if FOVEnabled then
        local target = GetClosestEnemy()
        if target then
            local direction = (target.Position - Camera.CFrame.Position).Unit
            local targetCFrame = CFrame.new(Camera.CFrame.Position, Camera.CFrame.Position + direction)
            Camera.CFrame = Camera.CFrame:Lerp(targetCFrame, Smoothness)
        end
    end
end)
